<%= form_with(model: @item, url: [current_user, @item]) do |form| %>
  <% if item.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(item.errors.count, "error") %> prohibited this item from being saved:</h2>

      <ul>
      <% item.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :title %>
    <%= form.text_field :title, class: "form-control", autofocus: true %>
  </div>

  <div class="form-group">
    <%= form.label :body %>
    <%= form.text_area :body, class: "form-control" %>
  </div>

  <div class="form-group form-check">
    <%= form.check_box :published, class: "form-check-input" %>
    <%= form.label :published, class: "form-check-label" %>
  </div>

  <div class="form-group form-check">
    <%= form.check_box :private, class: "form-check-input" %>
    <%= form.label :private, class: "form-check-label" %>
  </div>

  <div class="form-group">
    <%= form.submit "Submit", class: "btn btn-primary" %>
  </div>

<% end %>
